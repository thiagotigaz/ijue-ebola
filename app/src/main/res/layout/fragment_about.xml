                    <!--ext:documentView_textStyle="bold"-->
                    <!--ext:documentView_textSubPixel="true"/>-->
                    <!--ext:documentView_textTypefacePath="fonts/helvetica.ttf"-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp">

                    <TextView
                        android:id="@+id/textViewGithub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="New Text"
                        android:textSize="@dimen/social_icon_size" />

                    <TextView
                        android:id="@+id/textViewFacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="New Text"
                        android:textSize="@dimen/social_icon_size" />

                    <TextView
                        android:id="@+id/textViewTwitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="New Text"
                        android:textSize="@dimen/social_icon_size" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>
