                    <!--ext:documentView_maxLines="100"-->
                    <!--ext:documentView_offsetX="10dp"-->
                    <!--ext:documentView_offsetY="10dp"-->
                    <!--ext:documentView_reverse="false"-->
                    <!--ext:documentView_text="@string/about_content"-->
                    <!--ext:documentView_textAlignment="justified"-->
